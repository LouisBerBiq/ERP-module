<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Rental Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start Rental" type="object" 
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Complete" type="object" 
                            class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" 
                            class="oe_highlight" invisible="state not in ['confirmed', 'in_progress', 'done'] or invoice_status == 'invoiced'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_draft" string="Set to Draft" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" 
                                class="oe_stat_button" icon="fa-pencil-square-o"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statbutton" string="Invoices"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one" 
                                   context="{'show_address': 1, 'show_email': 1}"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="invoice_status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Rental Period">
                            <field name="date_start" widget="date"/>
                            <field name="date_end" widget="date"/>
                            <field name="rental_duration" readonly="1"/>
                        </group>
                        <group string="Pricing">
                            <field name="product_id" 
                                   context="{'default_detailed_type': 'service'}"/>
                            <field name="price_unit" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="price_total" readonly="1" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <tree string="Rental Orders" 
                  decoration-info="state == 'draft'" 
                  decoration-muted="state == 'cancelled'" 
                  decoration-success="state == 'done'"
                  sample="1">
                <field name="name" decoration-bf="1"/>
                <field name="partner_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="rental_duration"/>
                <field name="price_total" sum="Total" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'confirmed'"
                       decoration-primary="state == 'in_progress'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancelled'"/>
                <field name="invoice_status" widget="badge"
                       decoration-warning="invoice_status == 'to_invoice'"
                       decoration-success="invoice_status == 'invoiced'"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_rental_order_search" model="ir.ui.view">
        <field name="name">rental.order.search</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <search string="Search Rental Orders">
                <field name="name" string="Order Reference"/>
                <field name="partner_id" string="Customer"/>
                <field name="product_id" string="Product"/>
                <field name="user_id" string="Salesperson"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="To Invoice" name="to_invoice" domain="[('invoice_status', '=', 'to_invoice')]"/>
                <filter string="Invoiced" name="invoiced" domain="[('invoice_status', '=', 'invoiced')]"/>
                <separator/>
                <filter string="My Orders" name="my_orders" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Order Date" name="order_date" date="date_order"/>
                <filter string="Start Date" name="start_date" date="date_start"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Invoice Status" name="invoice_status_group" context="{'group_by': 'invoice_status'}"/>
                    <filter string="Salesperson" name="salesperson" context="{'group_by': 'user_id'}"/>
                    <filter string="Order Date" name="order_date_group" context="{'group_by': 'date_order'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_rental_order_kanban" model="ir.ui.view">
        <field name="name">rental.order.kanban</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="price_total"/>
                <field name="state"/>
                <field name="invoice_status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><field name="name"/></div>
                                    <div class="o_secondary"><field name="partner_id"/></div>
                                </div>
                                <span class="float-end">
                                    <field name="state" widget="badge"/>
                                </span>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date_start"/> - <field name="date_end"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="price_total" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Rental Orders</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_my_orders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first rental order
            </p>
            <p>
                Manage your rental operations with start and end dates, pricing, and automated invoicing.
            </p>
        </field>
    </record>
</odoo>

